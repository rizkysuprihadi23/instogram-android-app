<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.instogram.UploadActivity"
    android:padding="30dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageViewGambar"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="20dp"
        android:background="@color/backgroundhome"
        android:scaleType="centerCrop"/>
    <EditText
        android:id="@+id/txtCaption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Caption Here..."
        android:layout_marginBottom="20dp"/>
    <Button
        android:id="@+id/buttonUploadFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pilih File"
        android:onClick="BtnGalery"/>
    <Button
        android:id="@+id/buttonCamera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ambil Gambar"
        android:onClick="BtnCamera"/>
    <Button
        android:id="@+id/buttonUpload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload"
        android:onClick="BtnUpload"/>
</LinearLayout>
